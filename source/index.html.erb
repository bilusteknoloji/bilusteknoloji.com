<section class="2xl:py-24">
    <div class="container mx-auto">
        <div class="text-center">
            <h2 class="heading-2">
                Stay Ahead of the Curve
                <small class="block mt-2 text-bilus-500">Insights on IT World</small>
            </h2>
            <p class="2xl:text-xl 2xl:mb-12">
                Explore our latest articles, white papers, and thought leadership content.
            </p>
        </div>
        
        <div class="mb-5 grid grid-cols-1 2xl:gap-8 2xl:max-w-7xl 2xl:grid-cols-3">
            <% page_articles.sort_by{ |a| a.date }.reverse.first(3).each do |post| %>
            <div class="bg-white border rounded-xl p-6">
                <a href="<%= post.url %>" title="<%= I18n.t('click_to_read', title: post.data.title) %>" class="group flex flex-col gap-5">
                    <div class="overflow-hidden rounded-lg">
                        <%= image_tag "blog/#{post.data.cover}", alt: I18n.t('blog_cover_image_article', title: post.data.title), class: "transition duration-300 group-hover:scale-110 rounded-inherit" %>
                    </div>
                    <h3 class="text-bilus-500 font-semibold text-xl"><%= post.data.title %></h3>
                    <div class="leading-relaxed"><%= post.summary %></div>
                </a>
            </div>
            <% end %>
        </div>
        
        <div class="text-center">
            <% _, link = get_page_title_and_link 'blog' %>
            <a href="<%= link %>" class="inline-block bg-bilus-400 text-white px-6 py-3 font-bold rounded-full hover:bg-bilus-500 focus:outline-none focus:ring-4 focus:ring-bilus-300 transition duration-200 ease-in-out"><%= t('read_all_articles') %></a>
        </div>
    </div>
</section>


